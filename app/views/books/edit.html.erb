<div class="container">
    <h1>Editing Book</h1>
        <% if @book.errors.any? %>
            <div class="error_explantion mb-2">
                <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <%= form_for(@book) do |f| %>
      <div class="form-group">
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :body, "opinion" %>
            <%= f.text_area :body, class: 'form-control'%>
          </div>
            <%= f.submit "Update Book", class: 'btn btn-info btn-block', disable_with: 'Creating...' %>
       </div>
       <div class="container mt-2">
         <%= link_to "Show", book_path(@book), class: 'btn btn-info' %>
         <%= link_to "Back", books_path, class: 'btn btn-success' %>
       </div>
    <% end %>
</div>